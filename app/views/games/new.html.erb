<h1>New game</h1>
<div class="letters">
  <%@letters.each do |l|%>
  <p class="letter"><%= l %></p>
  <%end%>
</div>
<h3>What is the longest word that you can find?</h3>
<form action="/score" method='post'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="new_word" placeholder="Ask your coach">
  <input type="submit" value="Play">
</form>
